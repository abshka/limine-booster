[Trigger]
# This hook triggers when any package providing 'linux' is installed or upgraded.
Operation = Install
Operation = Upgrade
Type = Path
Target = usr/lib/modules/*/vmlinuz

[Action]
Description = Updating Limine entry with Booster for a new kernel...
When = PostTransaction
# This is the crucial addition. It pipes the list of triggering targets
# (e.g., "usr/lib/modules/6.16.0-5-cachyos/vmlinuz") to the script's stdin.
NeedsTargets
Exec = /usr/bin/limine-booster-update
